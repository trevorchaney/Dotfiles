# Use an escaping backslash '\' to use command without alias.

# Always show the contents after a change directory
cd() {
    builtin cd "$@" && ls --color=auto;
}

alias ard="arduino-cli"         # Tired of writing this out.
alias cp="cp -ir"               # Recursive copy, Confirm before overwriting.
alias df="df -h"                # Human-readable sizes.
alias dir='dir --color=auto'    # Add color to dir command.
alias egrep='egrep --color=auto' # Add color to egrep command.
alias fgrep='fgrep --color=auto' # Add color to fgrep command.
alias free="free -m"            # Show sizes in MB.
alias gitu="git add . && git commit && git push"  # Quick git add, commit, push.
alias grep='grep --color=auto'  # Add color to grep commnad.
alias info="info --vi-keys"     # Set vi-key bindings for the info command.
alias l="ls -CF --color=auto"
alias la="ls -A --color=auto"
alias ll="ls -halF --color=auto"
alias lr="ls -thral --color=auto"
alias ls="ls -a --color=auto"      # Add color to ls command.
alias mkdir="mkdir -p"          # Create parent directories.
alias more=less                 # Use less instead of more.
alias mv="mv -i"                # Confirm before overwriting.
alias neo="nvim"                # Just an abbreviation for neovim
alias nnn="nnn -e"              # Always open text documents in $EDITOR
alias py="python3"              # Python abbreviation.
alias scim="sc-im"
alias sudo="doas"               # YAGNI
alias vdir='vdir --color=auto'  # Add color to vdir command.
alias wtr="curl wttr.in"        # Get the local weather.
alias xo="xdg-open"             # Open with system preferred application.

# Always start 'nnn' in a tmux session.
#alias nnn="tmux new-session -ds 'temp' nnn -ea; tmux attach-session -t 'temp'"

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'
